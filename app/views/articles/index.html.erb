<!-- app/views/articles/index.html.erb -->
<h1 class="my-4">Articles</h1>

<%= link_to "New Article", new_article_path, class: "btn btn-primary mb-4" %>

<% @articles.each do |article| %>
  <div class="article-card">
    <h2 class="article-title"><%= link_to article.title, article %></h2>
    <p class="article-content"><%= truncate(article.content, length: 150) %></p>
    <div class="d-flex gap-2">
      <%= link_to "Edit", edit_article_path(article), class: "btn btn-secondary" %>
      <%= button_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
<% end %>
